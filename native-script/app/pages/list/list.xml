<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <Page.actionBar>
        <ActionBar title="Hashes">
            <ActionBar.actionItems>
                <ActionItem text="New" tap="{{ save }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <ListView items="{{ items }}" itemTap="navigateToAbout">
        <ListView.itemTemplate>
            <StackLayout>
                <Label text="{{ text }}" />
                <Label text="{{ hash }}" />
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>
